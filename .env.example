# Project name (used for Docker container naming - change this for each project!)
COMPOSE_PROJECT_NAME="myproject"

# Database (local-services uses local-postgres on port 5432)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/app?schema=public"

# Redis (local-services uses local-redis on port 6379)
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-jwt-secret-here-use-make-generate-secret"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-refresh-secret-here-use-make-generate-secret"
JWT_REFRESH_EXPIRES_IN="7d"

# LiteLLM (local-services provides LiteLLM on port 4001)
# LITELLM_BASE_URL="http://localhost:4001"
# LITELLM_MASTER_KEY="sk-local-master-key"

# LLM Provider API Keys (optional — set in local-services/.env instead)
# ANTHROPIC_API_KEY="sk-ant-xxx"
# OPENAI_API_KEY="sk-xxx"

# Langfuse (observability - external server)
# LANGFUSE_PUBLIC_KEY="pk-lf-xxx"
# LANGFUSE_SECRET_KEY="sk-lf-xxx"
# LANGFUSE_HOST="https://langfuse.your-server.com"

# Queue (optional, set to true to enable BullMQ)
QUEUE_ENABLED="false"

# Frontend (Vite) — relative URLs for local-services Caddy compatibility
VITE_PORT="5173"
VITE_API_URL="/api"
VITE_TRPC_URL="/trpc"

# Server
PORT="3000"
NODE_ENV="development"

# S3 / Minio (local-services provides Minio on port 9000)
# S3_ENDPOINT="http://localhost:9000"
# S3_ACCESS_KEY="minioadmin"
# S3_SECRET_KEY="minioadmin"
# S3_BUCKET="myproject"

# Mail (local-services provides Mailpit on port 1025)
# MAIL_HOST="localhost"
# MAIL_PORT="1025"
# MAIL_FROM="noreply@myproject.localhost"
