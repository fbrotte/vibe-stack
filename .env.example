# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/app?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-jwt-secret-here-use-make-generate-secret"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-refresh-secret-here-use-make-generate-secret"
JWT_REFRESH_EXPIRES_IN="7d"

# LiteLLM (optional, uncomment if using)
# LITELLM_BASE_URL="http://localhost:4000"
# LITELLM_MASTER_KEY="sk-1234"

# LLM Provider API Keys (optional)
# ANTHROPIC_API_KEY="sk-ant-xxx"
# OPENAI_API_KEY="sk-xxx"

# Langfuse (observability - external server)
# LANGFUSE_PUBLIC_KEY="pk-lf-xxx"
# LANGFUSE_SECRET_KEY="sk-lf-xxx"
# LANGFUSE_BASE_URL="https://langfuse.your-server.com"

# Queue (optional, set to true to enable BullMQ)
QUEUE_ENABLED="false"

# Logging
LOG_LEVEL="info"

# Server
PORT="3000"
NODE_ENV="development"
