# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/app?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-jwt-secret-here-use-make-generate-secret"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-refresh-secret-here-use-make-generate-secret"
JWT_REFRESH_EXPIRES_IN="7d"

# LiteLLM (optional, uncomment if using)
# LITELLM_BASE_URL="http://localhost:4000"
# LITELLM_MASTER_KEY="sk-1234"

# LLM Provider API Keys (optional)
# ANTHROPIC_API_KEY="sk-ant-xxx"
# OPENAI_API_KEY="sk-xxx"

# Langfuse (optional, uncomment if using observability profile)
# LANGFUSE_PUBLIC_KEY="pk-xxx"
# LANGFUSE_SECRET_KEY="sk-xxx"
# LANGFUSE_HOST="http://localhost:3001"

# Queue (optional, set to true to enable BullMQ)
QUEUE_ENABLED="false"

# Frontend (Vite)
VITE_API_URL="http://localhost:3000"
VITE_TRPC_URL="http://localhost:3000/trpc"

# Server
PORT="3000"
NODE_ENV="development"
